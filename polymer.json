{
  "basePath": true,
  "entrypoint": "index.html",
  "shell": "src/app.html",
  "fragments": [
    "src/pages/wishlist.html",
    "src/pages/not-found.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "name": "fallback",
      "preset": "es5-bundled",
      "basePath": true
    },
    {
      "name": "modern",
      "browserCapabilities": ["es2015", "push"],
      "preset": "es6-bundled",
      "basePath": true
    }
  ]
}
